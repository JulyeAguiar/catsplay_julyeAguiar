<h1>Usuários</h1>

<nav>
    <a href="/usuarios/novo">Cadastrar usuário</a>
</nav>

<table border="1">
    <tr>
        <th>Id</th>
        <th>Nickname</th>
        <th>Nome</th>
        <th>Ações</th>
    </tr>

    {{#each usuarios}}
    <tr>
        <td>{{this.id}}</td>
        <td>{{this.nickname}}</td>
        <td>{{this.nome}}</td>
        <td>
            <a href="/usuarios/{{this.id}}/atualizar">Atualizar</a>

            <form action="/usuarios/excluir" method="post">
                <input type="hidden" value="{{this.id}}" name="id" />
                <input type="submit" value="Excluir" />
            </form>
            <a href="/usuarios/{{this.id}}/cartoes">Ver cartões</a>
        </td>
    </tr>
    {{/each}}
</table>